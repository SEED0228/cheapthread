<h1>リスト作成</h1>
<%= form_with model:list, url: list_list_elements_path, method: :post, local: true do |f| %>

    <div class="field row">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: 'col-xs-12 list_title' %>
    </div>

    <div class="field row">
        <%= f.label "詳細" %>
        <%= f.text_area :introduction, class: 'col-xs-12 list_title' %>
    </div>

    <div class="field row">
    <table class="table">
    <thrad>
    <tr>
    <td>名前</td>
    <% if list.add_price_element%>
    <td>値段</td>
    <% end %>
    <% if list.add_calorie %>
    <td>カロリー</td>
    <% end %>
    <td colspan="3">詳細</td>
    </tr>
    </thead>
    <tbody id="list_elements">
        <%= f.fields_for :list_elements do |t| %>
            <%= render "list_element_fields", f: t, list: list %>
        <% end %>
    </tbody>
    </table>
    <div class="links">
        <%= link_to_add_association "子供を追加", f, :list_elements, render_options: {locals: {list: list}} %>
    </div>
    </div>


    <div class="actions row">
        <%= f.submit class: 'btn btn-primary col-xs-12'%>
    </div>
<% end %>

