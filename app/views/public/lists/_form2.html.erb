<h1>リスト作成</h1>
<%= form_with model:list do |f| %>

    <div class="field row">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: 'col-xs-12 list_title' %>
    </div>

    <div class="field row">
        <%= f.label "詳細" %>
        <%= f.text_area :introduction, class: 'col-xs-12 list_title' %>
    </div>

    <div class="field row">
    <table class="table">
    
    <tr>
    <td>
        <%= f.check_box :add_calorie, class: "list_calorie"%>
        <%= f.label "カロリー" %>
    </td>
    <td>
        <%= f.check_box :add_price_element, class: "list_price"%>
        <%= f.label "値段" %>
    </td>
    <td>
        <%= f.check_box :is_public, class: "list_public"%>
        <%= f.label "公開" %>
    </td>
    </tr>
    </table>
    </div>

    <div class="actions row">
        <%= f.submit class: 'btn btn-primary col-xs-12'%>
    </div>
<% end %>

