<div class="container">
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
        <h1>ユーザ編集</h1>
        <div class="error">
            <%= render 'public/end_users/shared/error_messages', resource:@end_user%>
        </div>
        <%= form_with model:@end_user, local: true do |f| %>

            <div class="field row">
                <%= f.label "ユーザ名" %>
                <%= f.text_field :name, class: 'col-xs-12' %>
            </div>

            <div class="field row">
                <%= f.label "電子メール" %>
                <%= f.email_field :email, class: 'col-xs-12' %>
            </div>

            <div class="field row">
                <%= f.label "画像" %>
                <%= f.attachment_field :profile_image, class: 'col-xs-12' %>
            </div>

            <div class="actions row", style="margin:30px 0;">
                <%= f.submit "ユーザ情報更新", class: 'btn btn-primary col-xs-12'%>
            </div>
        <% end %>
        </div>
    </div>
</div>

