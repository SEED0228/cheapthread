<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>ログイン</h2>

      <div class="row">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "public/end_users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前, class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="field">
            <%= f.label :パスワード, class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <br /> <br />
            <div class="field col-xs-offset-2 col-sm-offset-3">
              <%= f.check_box :remember_me, class:"col-xs-offset-2 col-sm-offset-3" %>
              <%= f.label :ログインを記憶する %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class:" btn btn-default col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2", style:"margin-top: 20px; margin-bottom: 20px;" %>
          </div>
        <% end %>

      </div>
      <div class="text-center">
        <%= render "public/end_users/shared/links" %>
      </div>
    </div>
  </div>
</div>
