<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h2>アカウント作成</h2>

      <div class="row">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/end_users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前, class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="field">
            <%= f.label "電子メール(適当でOK)", class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="field">
            <%= f.label :パスワード, class:"col-xs-offset-2 col-sm-offset-3" %>
            <% if @minimum_password_length %>
            <em>(最低<%= @minimum_password_length %> 文字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="field">
            <%= f.label "パスワード(確認)", class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="field">
            <%= f.label "画像(任意)", class:"col-xs-offset-2 col-sm-offset-3" %><br />
            <%= f.attachment_field :profile_image, class:"col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3" %>
          </div>

          <div class="actions">
            <%= f.submit "アカウント作成", class:" btn btn-default col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2", style:"margin-top: 20px; margin-bottom: 20px;" %>
          </div>
        <% end %>

      </div>
      <div class="text-center">
        <%= render "public/end_users/shared/links" %>
      </div>
    </div>
  </div>
</div>
